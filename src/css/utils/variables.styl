// -------------------
// Breakpoints
// -------------------
$mq_vars = {
    bp-1: '(min-width: 25em)'
    bp-2: '(min-width: 40em)'
    bp-3: '(min-width: 50em)'
    bp-4: '(min-width: 60em)'
}

// -------------------
// Typefaces
// -------------------
$sans = Helvetica, Arial, sans-serif
$sans-cond = Impact, Arial Narrow, Helvetica, sans-serif
$serif = Georgia, Times, serif

// $whitney = 'Whitney SSm A', 'Whitney SSm B'
// $mercury = 'Mercury SSm A', 'Mercury SSm B'

$ptSerif = 'PT Serif'
$ptSerif-hash ='pt-serif'
$roboto = 'Roboto'
$roboto-hash ='roboto'
$canela = 'Canela Web'
$publico = 'Publico Text Web'
$atlas = 'Atlas Grotesk Web'

// z-index
$z-index = {
    bottom: -100
    middle: 0
    top: 100
    overlay: 3000
}

// Color
$off-black = #2a2a2a
$gray-dark = #666
$gray = #999
$gray-light = #ccc
$off-white = #efefef

// etc.
smallcaps()
    text-transform lowercase
    font-variant small-caps
    
$mobilebp = 768
mobile()
    @media only screen and (max-width: $mobilebp - 1 px)
        {block}
desktop()
    @media not screen and (max-width: $mobilebp - 1 px)
        {block}
