// (needs to be kept in parallel with corresponding vars in overtime.js)
$allsongs-color = steelblue
$hits-color = orange

#overtime-graphic
    //max-width 70rem
    margin-bottom 8rem
    .title
      display none
      fill rgba(0,0,0,.8)
      font-size 1.5rem
      font-family $canela
    svg
        border none
        box-shadow none
        .title
            alignment-baseline hanging
        .legend
            smallcaps()
        .grid
            stroke-width 1
            line
              shape-rendering crispEdges
              +mobile()
                shape-rendering unset
        .grid-minor
            stroke #ddd
        .grid-major
            stroke #aaa
        .trendline
            stroke-width 2
        .legendCells
          text
            font-family $atlas
            font-size .7rem
            letter-spacing 0px
            font-weight 400
            fill #b1b1b1
    .spacer
        height 300px
        +mobile()
            height 360px
    .scrolly-slide
        border-left 4px solid $allsongs-color
        p
          margin 1rem 0rem
    .scrolly-slide.hits
        border-left 4px solid $hits-color
    .xaxis
      .domain
        display none
      .tick
        line
          stroke #888
    .yaxis
      .domain
        display none
      .tick
        line
          stroke #888
