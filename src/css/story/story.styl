fontify($ptSerif, $ptSerif-hash, $serif)
fontify($roboto, $roboto-hash, $sans)
fontify($atlas, $publico, $canela)

html, body
    background-color #fff
    color $off-black
    margin 0
    padding 0
    
html
    overflow auto
body
    width 100%
    overflow hidden

p
    line-height 1.6
    margin-bottom 10px
    font-family $publico
p, .prose
    a
        text-decoration underline
        color inherit
    a:hover
        color red

.row
    blockquote
        p
            font-family $atlas
            font-size .85rem

.prose
    max-width 40rem
    margin 0 auto
    margin-bottom 1.3em
    font-size 1rem
    line-height 1.7
    font-weight 400
    color black
.prose-big
    font-size 1.2rem
    line-height 1.9
    font-weight 100
    margin-bottom 1rem
.prose small
    font-size .8rem
    line-height 1
h1
    font-size 32px
    margin-bottom 30px
h2
    font-size 1.2rem
    font-family $atlas
    font-weight 500
    max-width 40rem
    margin 0 auto
    margin-bottom 1.3rem
    margin-top 4rem
    color    rgba(0,0,0,.90)

.graphic
    margin 0 auto
    width 80%
    +mobile()
        width 100%
.graphic.graphic-fullwidth
    width 100%

.prose-pull-quote
    margin 0 auto
    margin-top 3rem
    margin-bottom 2rem
    max-width 50rem

.col-xs-5
  width 50%

.flex-box
    -webkit-display flex
    display flex
    -webkit-justify-content space-around
    justify-content space-around

footer
    // XXX: hiding this for now because CSS is hard
    display: none
small
    font-size 1rem
button
    padding: 6px
    margin 6px
    border-radius 5px
#discog-widget .select2
    max-width 13em
.spacer
    height 300px
#girls
    float right
    width 40%
    display none
.tick
    text
        font-family $atlas
        font-weight 500
        font-size .65rem
.vline
    text
        font-family $atlas
        pointer-events none
        font-weight 500
        letter-spacing -.02rem
.xaxis-label
    font-family $atlas
    font-size .75rem
    font-weight 600
    text-transform uppercase
    letter-spacing .08em
.artists-bubble-text
    font-family $atlas
    font-size .6rem
    font-weight 600
.songlabel
    font-family $atlas
    font-size .6rem
    font-weight 600

// Reused in topsongs and artists charts
.decade-controls
    display flex
    margin 0 auto
    font-family $atlas
    justify-content center
    margin-top 1rem
    margin-bottom 1rem
    a.decade
        padding .2rem .5rem
        font-size .8rem
        cursor pointer
        text-align center
        border 1px solid rgba(127, 125, 156, 0.54)
        margin-left -1px
    a.decade.active
        background-color #F5F5F5
        font-weight 500
        color black
        box-shadow inset 0 3px 5px rgba(0,0,0,.125)
        border-color #adadad
blockquote
  border-left 5px solid #ececec
  padding-left 1rem
  margin 0

.small
  font-size .85rem
  font-family $atlas
  line-height 1.4
  margin-bottom 1.5rem

.title-nice
  margin-top 1.5rem
  margin-bottom 1.3rem
  font-size 1.8rem
  font-weight 100
  max-width 100%
  font-family $canela
  text-align center
  margin-bottom .5rem
.title-sub
  font-size .85rem
  font-family $atlas
  font-weight 400
  text-align center
  margin 0
.front-curve
  border-top-left-radius 5px
  border-bottom-left-radius 5px
.back-curve
  border-top-right-radius 5px
  border-bottom-right-radius 5px
  
#discog-examples
    list-style-type square
    a
        cursor pointer
